{
  "manifest_version": 3,
  "name": "Hifz Tracker",
  "version": "1.0",
  "description": "A simple extension to track Hifz progress on quran.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage", "activeTab"],
  "content_scripts": [
    {
      "matches": ["https://quran.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_icon": "icons/icon48.png"
  }
}

